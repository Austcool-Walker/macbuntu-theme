prepare() {
	cd ${srcdir}
	patch -Np0 -i "Catalina-Pheonix.patch"
	patch -Np0 -i "%E4%BA%A4%E9%8C%AF%E3%81%9B%E3%81%97%E6%88%A6%E7%A5%9E.patch"
	patch -Np0 -i "Black_Heart_%EF%BC%9CAngel%20Processor%EF%BC%9E(65051146).patch"
	patch -Np0 -i "k69a8l2d3tu41.patch"
}

package() {
	mv -v "$srcdir/usr" "$pkgdir"
	cp -v -R ${srcdir}/McOS-Mint-Cinnamon-Edition-master ${pkgdir}/usr/share/themes
	mv -v ${pkgdir}/usr/share/themes/McOS-Mint-Cinnamon-Edition-master ${pkgdir}/usr/share/themes/McOS-Mint-Cinnamon-Edition
	cp -v -R ${srcdir}/Breezemite_dark_OPT/ ${pkgdir}/usr/share/themes/
	cp -v -R ${srcdir}/Mojave-dark/ ${pkgdir}/usr/share/themes/
	cp -v -R ${srcdir}/X-Arc-Darker/ ${pkgdir}/usr/share/themes/
	cp -v -R ${srcdir}/X-Arc-Plus/ ${pkgdir}/usr/share/themes/
	cp -v -R ${srcdir}/X-Arc-Shadow/ ${pkgdir}/usr/share//themes/
	cp -v ${srcdir}/firefox-nightly_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-nightly-icon.png
	cp -v ${srcdir}/firefox-nightly_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-nightly.png
	cp -v ${srcdir}/firefox-nightly_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-nightly.png
	cp -v ${srcdir}/firefox-nightly_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-trunk.png
	cp -v ${srcdir}/Waterfox.png ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox-icon.png
	cp -v ${srcdir}/Waterfox.png ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox-classic-icon.png
	cp -v ${srcdir}/Waterfox.png ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox.png
	cp -v ${srcdir}/waterfox_512x512x32.svg ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox.svg
	cp -v ${srcdir}/waterfox_512x512x32.svg ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox-classic-icon.svg
	cp -v ${srcdir}/waterfox_512x512x32.svg ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox-current-icon.svg
	cp -v ${srcdir}/waterfox_512x512x32.svg ${pkgdir}/usr/share/icons/macOS/apps/128/waterfox-icon.svg
	cp -v ${srcdir}/firefox-dev_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-developer-edition.png
	cp -v ${srcdir}/firefox-dev_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/firefox-developer-icon.png
	cp -v ${srcdir}/DiscordCanary_1024x1024x32.png ${pkgdir}/usr/share/icons/macOS/apps/128/discord-canary.png
	cp -v ${srcdir}/Ou6o6vplRGmEMg2U.png ${pkgdir}/usr/share/backgrounds/Catalina-Day.png
	cp -v ${srcdir}/ldeKlVFl2uLAljkw.png ${pkgdir}/usr/share/backgrounds/Catalina-Night.png
	cp -v ${srcdir}/Phoenix.png ${pkgdir}/usr/share/backgrounds/Phoenix.png
	cp -v ${srcdir}/k69a8l2d3tu41.jpg ${pkgdir}/usr/share/backgrounds/k69a8l2d3tu41.jpg
	cp -v ${srcdir}/%E4%BA%A4%E9%8C%AF%E3%81%9B%E3%81%97%E6%88%A6%E7%A5%9E.jpg ${pkgdir}/usr/share/backgrounds/-交錯せし戦神-.jpg
	cp -v ${srcdir}/"Black_Heart_%EF%BC%9CAngel%20Processor%EF%BC%9E(65051146).png" ${pkgdir}/usr/share/backgrounds/"Black_Heart_＜Angel Processor＞(65051146).png"
	cp -v ${srcdir}/BlackHeartSwimsuit.png ${pkgdir}/usr/share/icons/macOS/apps/128/BlackHeartSwimsuit.png
	cp -v ${srcdir}/startup.svg ${pkgdir}/usr/share/themes/Mojave-dark/gnome-shell/assets/startup.svg
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/gnome-terminal.png ${pkgdir}/usr/share/icons/macOS/apps/128/org.gnome.Terminal.png
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/gnome-control-center.png ${pkgdir}/usr/share/icons/macOS/apps/128/org.gnome.Settings.png
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/file-roller.png ${pkgdir}/usr/share/icons/macOS/apps/128/org.gnome.ArchiveManager.png
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/screenshot.svg ${pkgdir}/usr/share/icons/macOS/apps/128/org.gnome.Screenshot.svg
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/gnome-logs.png ${pkgdir}/usr/share/icons/macOS/apps/128/org.gnome.Logs.png
	cp -v ${pkgdir}/usr/share/icons/macOS/apps/128/gnome-software.png ${pkgdir}/usr/share/icons/macOS/apps/128/mintinstall.png
}
